{
  "layer": "top",
  "modules-left": [
    "hyprland/workspaces",
    "sway/mode",
          "custom/spotify"
  ],
  "modules-center": [
    "clock"
  ],
  "modules-right": [

    "group/misc",
    "network",
    "pulseaudio",
    "bluetooth",
  
    "custom/power",
    //"custom/wlogout",
    "battery"
  ],
  "sway/window": {
    "max-length": 50
  },
  "custom/separator": {
    "format": "|",
    "tooltip": false
  },
  "battery": {
    "format": "{capacity}% {icon}",
    "format-icons": [
      "ÔâÑ",
      "ÔâÉ",
      "ÔâÇ",
      "ÔâÅ",
      "ÔâÄ"
    ]
  },
  "clock": {
    "format-alt": "{:%a, %d. %b  %H:%M}"
  },
  "custom/swaync": {
    "exec": "swaync-client -swb",
    "return-type": "json",
    "format": "{alt}",
    "format-icons": {
      "none": "",
      "notification": "üîî"
    },
    "on-click": "swaync-client -t",
    "on-click-right": "swaync-client -C",
    "on-click-middle": "swaync-client -R",
    "interval": 1,
    "persistent": true
  },
  "custom/spotify": {
    "max-length": 20,
    "escape": true,
    "exec": "~/.config/waybar/mediaplayer.py",
     "interval": 1,
    "on-click": "playerctl -p spotify play-pause",
    "return-type": "json",
    "exec-if": "playerctl -l | grep -q spotify"
  },
  "custom/power": {
    "format": "‚èª ",
    "tooltip": false,
    "menu": "on-click",
    "menu-file": "~/.config/waybar/power_menu.xml",
    "menu-actions": {
      "shutdown": "shutdown",
      "reboot": "reboot",
      "suspend": "systemctl suspend",
      "hibernate": "systemctl hibernate"
    }
  },
  "custom/wlogout": {
    "format": "ÔÄë",
    "tooltip": true,
    "tooltip-text": "Logout / Power Menu",
    "on-click": "wlogout -b 5 -c 0 -r 0 -L 350 -R 350",
    "interval": 3600
  },
  "pulseaudio": {
    "format": "{volume}% {icon}",
    "format-bluetooth": "{volume}% {icon}Ôäî",
    "format-muted": "ÔÄ¶",
    "format-icons": {
      "headphone": "Óπò",
      "hands-free": "Ôñê",
      "headset": "Ôñê",
      "phone": "ÔÇï",
      "phone-muted": "Ó¥ó",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": [
        "ÔÄß",
        "ÔÄ®"
      ]
    },
    "scroll-step": 1,
    "on-click": "pavucontrol",
    "ignored-sinks": [
      "Easy Effects Sink"
    ]
  },
  "bluetooth": {
    // "controller": "controller1", // specify the alias of the controller if there are more than 1 on the system
    "format": "Ôäî {status}",
    "format-disabled": "Û∞Ç≤", // an empty format will hide the module
    "format-connected": "Ôäî {num_connections} connected",
    "tooltip-format": "{controller_alias}\t{controller_address}",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
    "on-click": "blueman-manager"
  },
  "network": {
    "interface": "enp46s0",
    "format": "{ifname}",
    "format-wifi": "{essid} ({signalStrength}%) Ôá´",
    "format-ethernet": "{ipaddr}/{cidr} Û∞äó",
    "format-disconnected": "", //An empty format will hide the module.
    "tooltip-format": "{ifname} via {gwaddr} Û∞äó",
    "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´",
    "tooltip-format-ethernet": "{ifname} ÔÉÅ",
    "tooltip-format-disconnected": "Disconnected",
    "max-length": 30
  },
  "hyprland/workspaces": {
    "format": "{name}: {icon}",
    "format-icons": {
      "1": "Û∞ñü",
      "2": "ÔÖ™",
      "3": "Û∞ÆØ",
      "4": "Ó£ö",
      "5": "ÔÜº",
      "6": "Ó¨≤"
    },
    "persistent-workspaces": {
      "*": 6 // 5 workspaces by default on every monitor
    }
  }
}