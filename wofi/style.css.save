window {
    margin: 0px;
    border-radius: 20px;
    border: 2px solid rgba(255, 255, 255, 0.1);
    background-color: rgba(20, 20, 20, 0.8);
    backdrop-filter: blur(20px);
}

#input {
    margin: 10px; border-radius: 12px; border: none; padding: 10px; 
    background-color: rgba(40, 40, 40, 0.7); color: #ffffff; font-size: 16px;
}

#entry {
    padding: 10px; border-radius: 10px;
}

#entry:selected {
   background-color: rgba(90, 90, 90, 0.6);
}
